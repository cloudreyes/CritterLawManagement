@page
@model IntakeModel
@{
    ViewData["Title"] = "Case Intake";
}

<div class="container mt-4">
    <h1>New Case Intake</h1>
    <p class="text-muted">Start a new legal matter.</p>

    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.ClientId" class="form-label">Client</label>
                <select asp-for="Input.ClientId" class="form-select" asp-items="Model.ClientOptions" form="intakeForm">
                    <option value="">-- Select a Client --</option>
                </select>
                <a href="#" id="showCreateClient" class="form-text text-primary" style="cursor:pointer;">
                    + Create New Client
                </a>
            </div>

            <div id="createClientPanel" style="display:none;">
                <form method="post" asp-page-handler="CreateClient" class="mb-3 p-3 border rounded bg-light">
                    <label class="form-label">New Client Name</label>
                    <div class="input-group">
                        <input type="text" name="newClientName" class="form-control"
                               placeholder="Enter client name" />
                        <button type="submit" class="btn btn-outline-success">Save Client</button>
                    </div>
                </form>
            </div>

            <form method="post" id="intakeForm" asp-page="/Intake">
                <div class="mb-3">
                    <label asp-for="Input.OpposingParty" class="form-label">Opposing Party</label>
                    <input asp-for="Input.OpposingParty" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Input.CaseType" class="form-label">Case Type</label>
                    <select asp-for="Input.CaseType" class="form-select" asp-items="Html.GetEnumSelectList<ApexLegal.Web.Models.CaseType>()"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.InitialClaimAmount" class="form-label">Initial Claim Amount</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Input.InitialClaimAmount" class="form-control" type="number" step="0.01" />
                    </div>
                </div>
                @if (Model.ShowDuplicateWarning)
                {
                    <div class="alert alert-warning">
                        <strong>Possible duplicate:</strong> A matter with identical client, opposing party,
                        type, and amount already exists. Do you want to create it anyway?
                    </div>
                    <input type="hidden" asp-for="ConfirmDuplicate" value="true" />
                    <button type="submit" class="btn btn-warning">Create Anyway</button>
                }
                else
                {
                    <button type="submit" class="btn btn-success">Open Matter</button>
                }
                <a asp-page="/Dashboard" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('showCreateClient').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('createClientPanel').style.display = 'block';
            this.style.display = 'none';
        });
    </script>
}
